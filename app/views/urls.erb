<div class='welcome'>
  <h1>Welcome to <span class='site_name'>Minify</span></h1>
  <h2>The world's premiere url shortening network.</h2>
</div>

<form id='home-form' action='/urls' method='post'>

  <label for='long'>Url to shorten:</label>
  <input type='text' name='long' id='long'>

  <input type='submit' name='submit' value='Shorten Url'>
</form>

<span id='shortened_url'><h3>All Shortened Urls:</h3></span>

<ul class='list-of-urls'>
<% @urls.each do |url| %>
    <div class='url-list'>
      <li><span class='element'>Url:</span> <a href="/urls/<%= url.short %>"><%= url.short %></a></li>
      <li><span class='element'>Click Count:</span> <%= url.click_count %></li>
      <% unless url.user_id.nil? %>  <%# Is this where I would write a view helper method? %>
        <% user = User.find(url.user_id) %>
        <li><span class='element'>User:</span> <a href="/users/<%= user.id %>"><%= user.first_name %> <%= user.last_name %></a></li>  
      <% end %>
    </div>
<% end %>
</ul>
